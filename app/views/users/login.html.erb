<h1> Login </h2>

<div class="row">
  <div class="span6 offset3">
  	
  <% flash.each do |k,v| %>
			<p class "text-danger" id ="<%= k %>"><%= v %></p>
	<% end %>

	<%= form_for :user do |f| %>
		<%= f.text_field :email, placeholder: "Enter your email" %> <br>
		<%= f.password_field :password, placeholder: "password" %><br>
		<%= f.submit "Login", class: "btn btn-large btn-primary" %>
	<% end %>
	
		<h3> <%= link_to "Forget Password?", new_password_path %> </h3>
		
	</div>
</div>