<!-- users - login.html.erb -->

<div class="container">
  <div class="row">
    <div class="col-md-2">	
    	<h1> Login </h1>

		<%= form_for :user do |f| %>
			<%= f.text_field :email, placeholder: "Enter your email" %> <br>
			<%= f.password_field :password, placeholder: "password" %><br>
			<%= f.submit "Login", class: "btn btn-large btn-primary" %>
		<% end %>
		<h3> <%= link_to "Forget Password?", new_password_path %> </h3>
		</div>
	</div>
</div>